@model ClientIM.Models.Profile

@{
    ViewBag.Title = "Index";
    string space = " | ";
}

<h2>Index</h2>

<div>
    <h4>Profile</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.profile_pic)
        </dt>
        <dd>
            <img style="width:75px; height:75px" src="@Url.Content("~/Images/" + Model.profile_pic)" />
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.first_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.first_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.last_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.last_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.notes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.notes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.gender)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.privacy_flag)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.privacy_flag)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit Profile", "Edit", new { id = Model.person_id }) |
    @Html.ActionLink("Add a new picture", "Create", "Picture", new { id = Model.person_id }, null) |
    @Html.ActionLink("Address", "Index", "Address", new { id = Model.person_id }, null) |

    @if (Model.privacy_flag == null)
    {
        @Html.ActionLink("Turn Privacy Flag On", "PrivacyOn", "Profile", new { id = Model.person_id }, null)

        @space

        @Html.ActionLink("Turn Privacy Flag Off", "PrivacyOff", "Profile", new { id = Model.person_id }, null)
    }
    else if (Model.privacy_flag == "On")
    {
        @Html.ActionLink("Turn Privacy Flag Off", "PrivacyOff", "Profile", new { id = Model.person_id }, null)
    }
    else
    {
        @Html.ActionLink("Turn Privacy Flag On", "PrivacyOn", "Profile", new { id = Model.person_id }, null)
    }
</p>
